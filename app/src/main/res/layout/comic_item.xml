<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_margin="4dp"
            android:id="@+id/comic_item_pic"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/cover2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_marginStart="8dp"
            android:id="@+id/comic_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed-medium"
            app:layout_constraintStart_toEndOf="@id/comic_item_pic"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <View
            android:id="@+id/comic_item_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:background="#AAA"
            app:layout_constraintStart_toStartOf="@id/comic_item_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comic_item_title"/>

    <FrameLayout
            android:id="@+id/item_comic_pic_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="@id/comic_item_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comic_item_line">

        <ImageView
                android:id="@+id/item_comic_pic"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:cropToPadding="false"/>

        <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:alpha="0.3"
                android:scaleType="centerCrop"
                android:src="@drawable/sub_tab_photo_shadow"/>

        <ImageView
                android:id="@+id/picStroke"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:alpha="0.8"
                android:scaleType="centerCrop"
                android:src="@drawable/sub_tab_photo_stroke"/>
    </FrameLayout>

    <TextView
            android:layout_marginStart="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Authorauthorauthor"
            app:layout_constraintStart_toEndOf="@id/item_comic_pic_layout"
            android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/item_comic_pic_layout"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/icon_downloaded"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:layout_marginStart="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="12 Sep 2017"
            android:textSize="12dp"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/item_comic_pic_layout"
            app:layout_constraintBottom_toBottomOf="@id/item_comic_pic_layout"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/icon_downloaded"
            android:layout_marginEnd="8dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cloud_download"
            app:layout_constraintTop_toBottomOf="@+id/comic_item_line"
            android:layout_marginTop="4dp"
            android:id="@+id/icon_downloaded"
            app:layout_constraintEnd_toStartOf="@+id/icon_starred"
            android:layout_marginEnd="12dp"/>

    <TextView
            android:layout_marginTop="2dp"
            android:text="1234"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:textSize="12sp"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/icon_downloaded"
            app:layout_constraintEnd_toEndOf="@id/icon_downloaded"
            app:layout_constraintTop_toBottomOf="@id/icon_downloaded"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/comic_item_line"
            app:layout_constraintEnd_toEndOf="@+id/comic_item_line"
            android:layout_marginEnd="8dp"
            android:id="@+id/icon_starred"/>

    <TextView
            android:text="1234"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:textSize="12sp"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/icon_starred"
            app:layout_constraintEnd_toEndOf="@id/icon_starred"
            app:layout_constraintTop_toBottomOf="@id/icon_starred"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>